{% extends 'base.html.twig' %}

{% block title %}Hello ShowRegController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Alle Anmeldungen zum Kinderfest Postenlauf</h1>

    <div class="row">
    {% for spid in data %}
        {% for sz in spid.zeiten %}
        <div class="col s12"><h3>{{ spid.name }} um {{ sz.zeit|date("H:i") }}</h3></div>
        <div class="col s12">
            <table>
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Vorname</th>
                        <th>Adresse</th>
                        <th>Ort</th>
                        <th>E-Mail</th>
                        <th>Tel</th>
                    </tr>
                </thead>
                <tbody>
                {% for person in sz.personen %}
                    <tr>
                        <td>{{ person.name }}</td>
                        <td>{{ person.prename }}</td>
                        <td>{{ person.adresse }}</td>
                        <td>{{ person.plz }} {{ person.ort }}</td>
                        <td>{{ person.email }}</td>
                        <td>{{ person.tel }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {% endfor %}
    {% endfor %}
    </div>
</div>
{% endblock %}
